		this.hand = hand;
	}
	
	public int placeBet(Blackjack blackjack) {
		int bet = 0;
		return bet;
	};
	
	public void play(Blackjack blackjack) {
		while
	}
	
	public void count(Card card) {
		switch (card.getRank()) {
		case THREE:
			count++;
		case FOUR:
			count++;
		case FIVE:
			count++;
		case SIX:
			count++;
		case TEN:
			count--;
		case JACK:
			count--;
		case QUEEN:
			count--;
		case KING:
			count--;
		default:
			return;
		}
	}

}
